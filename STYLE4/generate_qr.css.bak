body {
    font-family: Arial, sans-serif;
    background-color: #f4f7fa;
    margin: 0;
    padding: 20px;
}

.container {
    background: white;
    padding: 30px;
    max-width: 700px;
    margin: auto;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

h2 {
    color: #2b4d71;
    margin-bottom: 20px;
}

table {
    margin: auto;
    width: 80%;
    border-collapse: collapse;
}

th, td {
    padding: 10px;
    text-align: left;
}

th {
    background-color: #2b4d71;
    color: white;
}

td {
    background-color: #f9f9f9;
}

.qr-container {
    margin-top: 30px;
}

.qr-container img {
    width: 200px;
    height: 200px;
}

.button-group {
    margin-top: 15px;
}

.btn {
    display: inline-block;
    margin: 5px;
    padding: 10px 20px;
    background-color: #2b4d71;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    cursor: pointer;
}

.error {
    color: red;
    font-weight: bold;
}
